<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewGame</servlet-name>
        <servlet-class>CreateNewGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinExistGame</servlet-name>
        <servlet-class>JoinExistGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginhandler</servlet-name>
        <servlet-class>loginhandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServelet</servlet-name>
        <servlet-class>LogoutServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewGame</servlet-name>
        <url-pattern>/CreateNewGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinExistGame</servlet-name>
        <url-pattern>/JoinExistGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginhandler</servlet-name>
        <url-pattern>/loginhandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServelet</servlet-name>
        <url-pattern>/LogoutServelet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
